include "../core_timed_defs.csp"

channel terminate
	
channel followFlightPlan: SearchType
channel decideFlightPlan: SearchType
channel AreControlsResponsive: Bool
channel powerDrone
channel recordVideo
channel takePicture
channel WatchForAbnormalities: Bool

channel setwAbnormalities: Bool
channel getwAbnormalities: Bool

channel setSearchType: SearchType
channel getSearchType: SearchType

channel setresponsive: Bool
channel getresponsive: Bool

datatype SearchType = SearchType_AreaSearch | SearchType_RapidParallelLine | SearchType_Linear | SearchType_CreepingLine | SearchType_PointOfInterest | SearchType_MountainFace | SearchType_WoodedArea | SearchType_Avalanche


-- declaring identifiers of fragments
datatype IDS = 
              ID_ALT  | 
              ID_LOOP | 
              ID_PAR | 
              ID_STR

channel guard: IDS.core_int.core_int.Bool
channel alt: IDS.core_int
channel loop: IDS.core_int
channel par: IDS.core_int
channel str: IDS.core_int

nametype core_int = {0..5}



Timed(OneStep) { 
	Alt = timed_priority(((((Pilot [| diff(inter(A_Pilot,A_Handheld),gets) |] Handheld) [| diff(inter(A_Observer,union(A_Pilot,A_Handheld)),gets)|] Observer) [| {|alt,guard,terminate|} |] guards) [| union(sharedVars, {|terminate|}) |] varMemory )) \{|alt,guard|}

	
	Pilot = WatchForAbnormalities?wAbnormalities ->
	 (setwAbnormalities!wAbnormalities -> SKIP); alt_Pilot_1; followFlightPlan!SearchType_AreaSearch -> SKIP; terminate -> SKIP
	
	Handheld = followFlightPlan?searchType -> alt_Handheld_2; terminate -> SKIP
	
	Observer = alt_Observer_2; terminate -> SKIP
				
				
				
	alt_Pilot_1 = alt.ID_ALT.1 -> guard.ID_ALT.1.1?x -> (
				x&(AreControlsResponsive?responsive->
	 (setresponsive!responsive -> SKIP))
				[] not(x)&(SKIP))
	
	alt_Handheld_2 = alt.ID_ALT.2 -> guard.ID_ALT.2.1?x -> guard.ID_ALT.2.2?y -> (
				x&(takePicture -> SKIP)
				[]
				y&(recordVideo -> SKIP)
				[]
				not(x or y)&(powerDrone -> SKIP)
			)
	
	alt_Observer_2 = alt.ID_ALT.2 -> guard.ID_ALT.2.1?x -> guard.ID_ALT.2.2?y -> (
				x&(takePicture -> SKIP)
				[]
				y&(recordVideo -> SKIP)
				[]
				not(x or y)&(powerDrone -> SKIP)
			)
	
	
	
	
	
	
	guards = (evaluation [| union(A_Counters, {|terminate|}) |] counters) \countVars
	
	evaluation = reset_counters; guards_response
	
	counters = SKIP [] terminate -> SKIP
	
	reset_counters = SKIP
	
	
	guards_response = alt?ID_ALT.x -> ((x==1)&(getwAbnormalities?wAbnormalities-> (
					((wAbnormalities==false))&
						(guard.ID_ALT.1.1!true -> SKIP)
					[] not((wAbnormalities==false))&
						(guard.ID_ALT.1.1!false -> SKIP)
				))
				[]
				(x==2)&(getresponsive?responsive -> getwAbnormalities?wAbnormalities-> (
					((responsive==true) and (wAbnormalities==true))&(guard.ID_ALT.2.1!true -> guard.ID_ALT.2.2!false -> SKIP)
					[] ((responsive==true) and (wAbnormalities==false))&(guard.ID_ALT.2.1!false -> guard.ID_ALT.2.2!true -> SKIP)
					[] not(((responsive==true) and (wAbnormalities==true))or((responsive==true) and (wAbnormalities==false)))&(guard.ID_ALT.2.1!false -> guard.ID_ALT.2.2!false -> SKIP)
				))
			); guards_response
			[] terminate -> SKIP
	
	
	
	
	varMemory = Memory_searchType(SearchType_AreaSearch)
					 [| { terminate } |] (
					 Memory_wAbnormalities(false)
					 [| { terminate } |]
					Memory_responsive(true))

	Memory_searchType(searchType) =
				getSearchType!searchType -> Memory_searchType(searchType)
				[]
				setSearchType?x__ -> Memory_searchType(x__)
				[]
				terminate -> SKIP
								
	Memory_wAbnormalities(wAbnormalities) =
				getwAbnormalities!wAbnormalities -> Memory_wAbnormalities(wAbnormalities)
				[] 
				setwAbnormalities?x__ -> Memory_wAbnormalities(x__)
				[]
				terminate -> SKIP
				
					
	Memory_responsive(responsive) =
				getresponsive!responsive -> Memory_responsive(responsive)
				[]
				setresponsive?x__ -> Memory_responsive(x__)
				[]
				terminate -> SKIP
}

A_Pilot = union(union(union({|AreControlsResponsive, decideFlightPlan, followFlightPlan, guard.ID_ALT.1.1,alt.ID_ALT.1,terminate|},searchTypeVars),responsiveVars),wAbnormalitiesVars)

A_Handheld = {|followFlightPlan,powerDrone,recordVideo,takePicture,
		alt.ID_ALT.2,guard.ID_ALT.2.1,guard.ID_ALT.2.2,terminate|}

A_Observer = {|takePicture,powerDrone,recordVideo,alt.ID_ALT.2,
		guard.ID_ALT.2.1,guard.ID_ALT.2.2,terminate|}

sharedVars = union(union(searchTypeVars,responsiveVars),wAbnormalitiesVars)

wAbnormalitiesVars = {|getwAbnormalities,setwAbnormalities|}
searchTypeVars = {|setSearchType,getSearchType|}
responsiveVars = {|getresponsive,setresponsive|}

A_Counters = countVars
countVars = {||}

gets = {|getSearchType,getresponsive,getwAbnormalities|}

assert not Alt :[deadlock free]
assert Alt :[divergence free]
assert Alt :[deterministic]

assert Alt :[has trace [T]]: <WatchForAbnormalities.true, setwAbnormalities.true, getwAbnormalities.true, followFlightPlan.SearchType_AreaSearch, getresponsive.true,getwAbnormalities.true,takePicture,terminate>

assert Alt :[has trace [T]]: <WatchForAbnormalities.false, setwAbnormalities.false, getwAbnormalities.false, AreControlsResponsive.true, setresponsive.true,followFlightPlan.SearchType_AreaSearch, getresponsive.true,getwAbnormalities.false, recordVideo,terminate>

assert Alt :[has trace [T]]: <WatchForAbnormalities.false, setwAbnormalities.false, getwAbnormalities.false,AreControlsResponsive.false, setresponsive.false,followFlightPlan.SearchType_AreaSearch, getresponsive.false,getwAbnormalities.false, powerDrone,terminate>


